<!--                        string="Download"-->
<!--                        class="oe_highlight"-->
<!--                        invisible="not is_closed"-->
<!--                    />-->
<!--                    <button-->
<!--                            name="action_open_letter_requests"-->
<!--                            type="object" string="View Sign Templates"-->
<!--                            class="btn-primary"-->
<!--                            invisible="not is_sign or not sign_template_id"-->
<!--                            />-->
<!--                    <button-->
<!--                            name="action_create_sign_template"-->
<!--                            type="object" string="Sign Letter"-->
<!--                            class="btn-primary"-->
<!--                            invisible="not is_sign or sign_template_id"-->
<!--                            />-->
<!--                    <button-->
<!--                            name="action_send_as_attachment"-->
<!--                            type="object" string="Send by Email"-->
<!--                            class="btn-primary"-->
<!--                            invisible="not is_closed or signature_status != 'signed'"-->
<!--                            />-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_open_attachments"
                            class="oe_stat_button"
                            icon="fa-book"
                            type="object"
                            invisible="attachment_number == 0"
                        >
                            <field
                                name="attachment_number"
                                widget="statinfo"
                                string="Documents"
                                options="{'reload_on_button': true}"
                            />
                        </button>
                    </div>
                    <widget
                        bg_color="bg-danger"
                        invisible="active == True"
                        name="web_ribbon"
                        title="Archived"
                    />
                    
                    <div class="oe_avatar image-container">
                        <field
                            name="letter_type_image"
                            widget="image"
                            options="{'preview_image': 'letter_type_image', 'size': [80, 80]}"
                            class="bg-view"
                        />
<!--                        <div class="signature-status-bar status-approved" -->
<!--                            invisible="signature_status != 'signed'">-->
<!--                            Approved-->
<!--                        </div>-->
                            
