                    <div class="oe_title">
                        <h4>
                            <field invisible="name == '/'" name="name" readonly="id" />
                        </h4>
                        <h1>
                            <field name="subject" class="mb-5" required="1" readonly="is_closed"/>
                        </h1>
                    </div>
                    <group>
                        <group name="main">
                            <field
                                name="user_id"
                                options="{'no_create': True, 'no_open': True}"
                                domain="[('share', '=', False)]"
                                widget="many2one_avatar_user"
                            />
                            <field name="letter_type_id" invisible="1" />
                            <field name="date" />
                            <field
                                name="partner_ids"
                                options="{'no_create': False}"
                                widget="many2many_tags_avatar"

                            />
                            <field name="available_mail_template_ids" invisible="1" />
                            <field
                                name="template_id"
                                options="{'no_create': True, 'no_open': True}"
                                context="{'default_letter_id': active_id}"
                            />
                            <field name="company_id" invisible="1" />
                            <field name="render_model" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="content" string="Content">
                            <field name="body" readonly="is_closed" />
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" />
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="letter_search" model="ir.ui.view">
        <field name="name">letter.search</field>
        <field name="model">letter.letter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="subject" />
                <field name="stage_id" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <filter
                    string="Is Delivered"
                    name="is_delivered"
                    domain="[('is_delivered', '=', True)]"
                />
                <group expand="1" string="Group By">
                    <filter
                        name="groupby_company"
                        string="Company"
                        context="{'group_by': 'company_id'}"
                    />
                    <filter
                        string="Stage"
                        name="groupby_stage"
                        context="{'group_by': 'stage_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
</odoo>
