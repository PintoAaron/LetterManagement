<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="letter_type_stage_tree" model="ir.ui.view">
        <field name="name">letter.type.stage.tree</field>
        <field name="model">letter.type.stage</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pipeline.stage_tree" />
        <field name="arch" type="xml">
            <!-- dummy extension because empty views not allowed -->
            <tree position="attributes">
                <attribute name="string">Letter Type Stage</attribute>
            </tree>
        </field>
    </record>

    <record id="letter_type_stage_form" model="ir.ui.view">
        <field name="name">letter.type.stage.form</field>
        <field name="model">letter.type.stage</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pipeline.stage_form" />
        <field name="arch" type="xml">
            <!-- dummy extension because empty views not allowed -->
            <form position="attributes">
                <attribute name="string">Letter Type Stage</attribute>
            </form>
        </field>
    </record>

    <record id="letter_type_stage_search" model="ir.ui.view">
        <field name="name">letter.type.stage.search</field>
        <field name="model">letter.type.stage</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pipeline.stage_search" />
        <field name="arch" type="xml">
            <!-- dummy extension because empty views not allowed -->
            <search position="attributes">
                <attribute name="string">Letter Type Stage</attribute>
            </search>
        </field>
    </record>

    <record id="letter_type_stage_window" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">letter.type.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stages found. Let's create one!
            </p>
            <p>
                Define the steps your pipeline moves through from creation to completion.
            </p>
        </field>
    </record>
</odoo>
