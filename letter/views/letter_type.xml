<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="letter_type_tree" model="ir.ui.view">
        <field name="name">letter.type.tree</field>
        <field name="model">letter.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="letter_type_form" model="ir.ui.view">
        <field name="name">letter.type.form</field>
        <field name="model">letter.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button
                            name="action_open_letter_type_stage"
                            string="Pipeline"
                            type="object"
                            class="oe_stat_button"
                            help="View &amp; letter type pipeline"
                            icon="fa-arrows-h"
                        />
                    </div>

                    <field name="active" invisible="1" />
                    <widget
                        bg_color="bg-danger"
                        invisible="active == True"
                        name="web_ribbon"
                        title="Archived"
                    />
                    <field
                        class="oe_avatar"
                        name="image"
                        options='{"preview_image": "image", "size": [80, 80]}'
                        widget="image"
                    />
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main">
                        <field name="description" />
                        <field
                            groups="base.group_multi_company"
                            name="company_id"
                            options="{'no_create': True}"
                            invisible="1"
                        />
                        <field name="mail_template_id" options="{'no_create': True}" />
                        <field
                            name="mail_template_ids"
                            widget="many2many_tags"
                            options="{'no_create': True}"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="letter_type_window" model="ir.actions.act_window">
        <field name="name">Letter Types</field>
        <field name="res_model">letter.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        action="letter_type_window"
        id="letter_type_menu"
        name="Letter Types"
        parent="config_menu"
        sequence="1"
    />
</odoo>
